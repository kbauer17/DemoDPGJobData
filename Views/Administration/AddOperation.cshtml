@model DemoDPGJobData.ViewModels.AdministrationViewModel;
@{
    ViewBag.Title = "Create Operation";
}

<div class="container">
    <h1>Create</h1>

    <h4>Operation</h4>
    <hr />


    <form method="post">
        <div class="row">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="col-sm-6 mb-3">
                <label asp-for="JobOp.Id" class="control-label">Id</label>
                <input asp-for="JobOp.Id" 
                    class="form-control" maxlength="50" required
                    placeholder="Example:  12" />
                <span asp-validation-for="JobOp.Id" class="text-danger"></span>
            </div>
            <div class="col-sm-6 mb-3">
                <label asp-for="JobOp.OpName" class="control-label">Operation Name</label>
                <input asp-for="JobOp.OpName" 
                    class="form-control" maxlength="100" 
                    placeholder="Example:  Header"/>
                <span asp-validation-for="JobOp.OpName" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>

        </div>
    </form>
<div>
    <a asp-controller="Administration" asp-action="ViewAllOperations">Back to List</a>
</div>

</div>




@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}